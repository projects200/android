<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Style -->
    <style name="header">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="content_bold">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="content_regular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="subtext_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="subtext_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="subtext_8">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>
</resources>