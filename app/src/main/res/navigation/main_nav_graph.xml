<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/exerciseListFragment">
    <fragment
        android:id="@+id/exerciseListFragment"
        android:name="com.project200.feature.exercise.ExerciseListFragment"
        android:label="exerciseList"
        tools:layout="@layout/fragment_exercise_list">
        <action
            android:id="@+id/action_exerciseListFragment_to_exerciseDetailFragment"
            app:destination="@id/exerciseDetailFragment" >
            <argument
                android:name="recordId"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_exerciseListFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_exerciseListFragment_to_exerciseFormFragment"
            app:destination="@id/exerciseFormFragment"/>
    </fragment>

    <fragment
        android:id="@+id/exerciseDetailFragment"
        android:name="com.project200.feature.exercise.detail.ExerciseDetailFragment"
        android:label="exerciseDetail"
        tools:layout="@layout/fragment_exercise_detail">
        <action
            android:id="@+id/action_exerciseDetailFragment_to_exerciseFormFragment"
            app:destination="@id/exerciseFormFragment"/>
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.project200.undabang.profile.setting.SettingFragment"
        android:label="setting"
        tools:layout="@layout/fragment_setting">
    </fragment>

    <fragment
        android:id="@+id/exerciseFormFragment"
        android:name="com.project200.feature.exercise.form.ExerciseFormFragment"
        android:label="exerciseForm"
        tools:layout="@layout/fragment_exercise_form"/>

</navigation>