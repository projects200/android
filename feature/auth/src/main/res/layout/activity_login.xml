<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project200.undabang.auth.login.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:background="@color/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/app_name_kr"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kakao_login_btn"
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="20dp"
        android:background="@drawable/basic_activate_btn"
        android:backgroundTint="@color/kakao_yellow"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/kakao_login"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/google_login_btn" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/ic_login_kakao"
        app:layout_constraintStart_toStartOf="@id/kakao_login_btn"
        app:layout_constraintTop_toTopOf="@id/kakao_login_btn"
        app:layout_constraintBottom_toBottomOf="@id/kakao_login_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google_login_btn"
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="80dp"
        android:background="@drawable/google_login_border"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/google_login"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/ic_login_google"
        app:layout_constraintStart_toStartOf="@id/google_login_btn"
        app:layout_constraintTop_toTopOf="@id/google_login_btn"
        app:layout_constraintBottom_toBottomOf="@id/google_login_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>