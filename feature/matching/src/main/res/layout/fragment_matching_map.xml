<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/base_horizontal_margin"
        android:paddingBottom="@dimen/base_horizontal_margin"
        android:paddingTop="16dp"
        android:elevation="2dp"
        android:background="@drawable/bg_matching_map_toolbar"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/exercise_place_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/content_bold"
            android:paddingVertical="2dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="2dp"
            android:text="@string/exercise_place_list" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>