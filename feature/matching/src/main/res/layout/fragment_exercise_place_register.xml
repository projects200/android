<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white300"
    android:orientation="vertical">

    <com.project200.presentation.base.BaseToolbar
        android:id="@+id/base_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="@dimen/base_horizontal_margin">

        <ImageView
            android:id="@+id/place_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_member_marker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/place_name_tv"
            style="@style/content_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/place_address_tv"
            app:layout_constraintStart_toEndOf="@id/place_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/place_address_tv"
            style="@style/content_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/place_name_tv"
            app:layout_constraintTop_toBottomOf="@id/place_name_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        style="@style/content_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_horizontal_margin"
        android:layout_marginTop="30dp"
        android:text="@string/place_name_title" />

    <EditText
        android:id="@+id/place_name_et"
        style="@style/subtext_14"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_exercise_place_et"
        android:hint="@string/place_name_hint"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:textColorHint="@color/gray200" />

    <TextView
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/ic_warning"
        android:drawablePadding="6dp"
        android:text="@string/place_name_notice_title"
        android:textColor="@color/gray200"
        android:textSize="12sp" />

    <TextView
        style="@style/subtext_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:layout_marginTop="12dp"
        android:text="@string/place_name_notice_content"
        android:textColor="@color/gray200"
        android:textSize="12sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn"
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:layout_marginBottom="40dp"
        android:background="@drawable/basic_activate_btn"
        android:gravity="center"
        android:text="@string/exercise_place_register_complete"
        android:textColor="@color/white300" />
</LinearLayout>