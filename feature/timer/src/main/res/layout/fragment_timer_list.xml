<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/base_horizontal_margin"
    android:background="@color/main_background">

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_appname"
        android:layout_marginStart="@dimen/base_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/header"
        android:id="@+id/simple_timer_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:text="@string/simple_timer"
        android:textColor="@color/white300"
        android:gravity="center"
        android:elevation="4dp"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:background="@drawable/bg_simple_timer"
        app:layout_constraintTop_toBottomOf="@id/logo_iv"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        android:src="@drawable/ic_timer_arrow_right"
        app:layout_constraintEnd_toEndOf="@id/simple_timer_btn"
        app:layout_constraintTop_toTopOf="@id/simple_timer_btn"
        app:layout_constraintBottom_toBottomOf="@id/simple_timer_btn"
        app:tint="@color/white300" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_timer_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:listitem="@layout/item_custom_timer"
        app:layout_constraintTop_toBottomOf="@id/simple_timer_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/header"
        android:id="@+id/add_custom_timer_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="@string/custom_timer_default"
        android:gravity="center"
        android:elevation="4dp"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:background="@drawable/bg_custom_timer"
        app:layout_constraintTop_toBottomOf="@id/custom_timer_rv" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@id/add_custom_timer_btn"
        app:layout_constraintBottom_toBottomOf="@id/add_custom_timer_btn"
        app:layout_constraintEnd_toEndOf="@id/add_custom_timer_btn"
        android:src="@drawable/ic_plus"/>
</androidx.constraintlayout.widget.ConstraintLayout>