<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        style="@style/header"
        android:id="@+id/custom_timer_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text=""
        android:gravity="center"
        android:elevation="4dp"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:background="@drawable/bg_custom_timer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@id/custom_timer_title"
        app:layout_constraintBottom_toBottomOf="@id/custom_timer_title"
        app:layout_constraintEnd_toEndOf="@id/custom_timer_title"
        android:src="@drawable/ic_timer_arrow_right"/>
</androidx.constraintlayout.widget.ConstraintLayout>