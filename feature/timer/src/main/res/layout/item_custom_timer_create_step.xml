<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/custom_timer_title"
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_custom_timer"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingEnd="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/step_order_handler_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingVertical="6dp"
            android:src="@drawable/ic_order_handler"/>
        <ImageView
            android:id="@+id/clock_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock"
            android:layout_marginStart="12dp"
            app:tint="@color/black" />
        <EditText
            android:id="@+id/step_name_et"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="50"
            android:textColorHint="@color/gray200"
            style="@style/content_bold"
            android:textSize="18sp"
            android:layout_marginStart="6dp"/>
        <TextView
            android:id="@+id/step_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="12dp"
            style="@style/header" />
        <ImageView
            android:id="@+id/step_delete_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_minus"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>