<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white300">
    <com.project200.presentation.base.BaseToolbar
        android:id="@+id/base_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/main_background"
        android:id="@+id/chatting_message_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/base_horizontal_margin"
        android:clipToPadding="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/base_horizontal_margin"
        android:paddingVertical="10dp"
        android:minHeight="44dp"
        android:maxHeight="150dp"
        android:background="@color/white300">
        <EditText
            android:id="@+id/chatting_message_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/content_regular"
            android:text=""
            android:minHeight="24dp"
            android:maxHeight="130dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/chatting_message_hint"
            android:textColorHint="@color/gray200"
            android:background="@android:color/transparent"/>
        <ImageView
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message_send"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>