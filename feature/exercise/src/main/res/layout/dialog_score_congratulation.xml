<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:paddingTop="28dp"
    android:paddingBottom="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_score_congratulation_dialog_border">

    <TextView
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/exercise_score_congratulation_title"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:lottie_rawRes="@raw/raw_congratulation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="0.8"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_btn"
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_btn_radius"
        android:backgroundTint="@color/main"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white300"
        app:layout_constraintBottom_toBottomOf="parent" />
</LinearLayout>