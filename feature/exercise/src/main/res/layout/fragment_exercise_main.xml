<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/base_horizontal_margin"
    android:background="@color/white300">

    <ImageView
        android:id="@+id/prev_month_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/date_tv"
        app:layout_constraintEnd_toStartOf="@id/date_tv"
        app:layout_constraintTop_toTopOf="@id/date_tv"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/date_tv"
        style="@style/content_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/next_month_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/date_tv"
        app:layout_constraintStart_toEndOf="@id/date_tv"
        app:layout_constraintTop_toTopOf="@id/date_tv"
        app:tint="@color/black" />

    <include
        android:id="@+id/calendar_day_header"
        layout="@layout/calendar_day_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/date_tv" />

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/exercise_calendar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/exercise_calendar_height"
        app:cv_dayViewResource="@layout/calendar_day_layout"
        app:cv_orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/calendar_day_header" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exercise_create_btn"
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="32dp"
        android:background="@drawable/basic_activate_btn"
        android:elevation="8dp"
        android:gravity="center"
        android:text="@string/exercise_create_get_score"
        android:textColor="@color/white300"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>