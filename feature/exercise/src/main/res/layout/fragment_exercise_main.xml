<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white300">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/base_horizontal_margin"
        android:elevation="3dp">
        <ImageView
            android:id="@+id/logo_iv"
            android:src="@drawable/ic_logo_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/setting_btn"
            android:src="@drawable/ic_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/logo_iv"
            app:layout_constraintBottom_toBottomOf="@id/logo_iv"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/score_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar_cl">
        <TextView
            android:id="@+id/exercise_cnt_tv"
            style="@style/content_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/score_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/score_tv"/>
        <TextView
            android:id="@+id/score_tv"
            style="@style/header"
            android:textSize="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="@id/exercise_cnt_tv"
            app:layout_constraintEnd_toEndOf="@id/exercise_cnt_tv"
            app:layout_constraintTop_toBottomOf="@id/exercise_cnt_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.project200.presentation.view.CustomCircularProgressBar
            android:id="@+id/score_progress_bar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/score_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="10dp" />
        <ImageView
            android:id="@+id/score_level_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_score_low_level"
            app:layout_constraintStart_toStartOf="@id/score_progress_bar"
            app:layout_constraintTop_toTopOf="@id/score_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/score_progress_bar"
            app:layout_constraintEnd_toEndOf="@id/score_progress_bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:paddingHorizontal="@dimen/base_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/score_cl">
        <ImageView
            android:id="@+id/prev_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_calendar_back"
            app:layout_constraintBottom_toBottomOf="@id/date_tv"
            app:layout_constraintEnd_toStartOf="@id/date_tv"
            app:layout_constraintTop_toTopOf="@id/date_tv"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/date_tv"
            style="@style/content_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_iv" />

        <ImageView
            android:id="@+id/next_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_calendar_next"
            app:layout_constraintBottom_toBottomOf="@id/date_tv"
            app:layout_constraintStart_toEndOf="@id/date_tv"
            app:layout_constraintTop_toTopOf="@id/date_tv"
            app:tint="@color/black" />

        <include
            android:id="@+id/calendar_day_header"
            layout="@layout/calendar_day_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/date_tv" />

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/exercise_calendar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/exercise_calendar_height"
            app:cv_dayViewResource="@layout/calendar_day_layout"
            app:cv_orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/calendar_day_header" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exercise_create_btn"
        style="@style/content_bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="@dimen/base_horizontal_margin"
        android:background="@drawable/basic_activate_btn"
        android:elevation="8dp"
        android:gravity="center"
        android:text="@string/exercise_create_get_score"
        android:textColor="@color/white300"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>