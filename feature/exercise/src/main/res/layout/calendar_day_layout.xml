<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/calendar_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/subtext_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/today_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_today_indicator"
        app:layout_constraintBottom_toBottomOf="@id/calendar_day_tv"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_tv"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_tv"
        app:layout_constraintTop_toTopOf="@id/calendar_day_tv" />

    <ImageView
        android:id="@+id/exercise_complete_iv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_exercise_complete"
        app:layout_constraintBottom_toBottomOf="@id/calendar_day_tv"
        app:layout_constraintEnd_toEndOf="@+id/calendar_day_tv"
        app:layout_constraintStart_toStartOf="@+id/calendar_day_tv"
        app:layout_constraintTop_toTopOf="@id/calendar_day_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>