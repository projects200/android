<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="24dp">

    <!-- 프로필 이미지 스켈레톤 -->
    <View
        android:id="@+id/profile_skeleton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_circle_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 닉네임 스켈레톤 -->
    <View
        android:id="@+id/nickname_skeleton"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:background="@color/gray300"
        app:layout_constraintStart_toEndOf="@+id/profile_skeleton"
        app:layout_constraintTop_toTopOf="@+id/profile_skeleton" />

    <!-- 피드 타입 스켈레톤 -->
    <View
        android:id="@+id/feed_type_skeleton"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/gray300"
        app:layout_constraintStart_toEndOf="@+id/nickname_skeleton"
        app:layout_constraintTop_toTopOf="@+id/nickname_skeleton" />

    <!-- 시간 스켈레톤 -->
    <View
        android:id="@+id/time_skeleton"
        android:layout_width="40dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="@color/gray300"
        app:layout_constraintStart_toStartOf="@+id/nickname_skeleton"
        app:layout_constraintTop_toBottomOf="@+id/nickname_skeleton" />

    <!-- 컨텐츠 스켈레톤 -->
    <View
        android:id="@+id/content_skeleton_1"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginEnd="48dp"
        app:layout_constraintStart_toStartOf="@+id/nickname_skeleton"
        app:layout_constraintTop_toBottomOf="@+id/time_skeleton" />

    <View
        android:id="@+id/content_skeleton_2"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="80dp"
        android:background="@color/gray300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/content_skeleton_1"
        app:layout_constraintTop_toBottomOf="@+id/content_skeleton_1" />

    <!-- 이미지 스켈레톤 -->
    <View
        android:id="@+id/image_skeleton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_solid_corner"
        android:backgroundTint="@color/gray300"
        app:layout_constraintStart_toStartOf="@+id/content_skeleton_1"
        app:layout_constraintTop_toBottomOf="@+id/content_skeleton_2" />

    <!-- 댓글/좋아요 스켈레톤 -->
    <View
        android:id="@+id/comment_skeleton"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray300"
        app:layout_constraintStart_toStartOf="@+id/nickname_skeleton"
        app:layout_constraintTop_toBottomOf="@+id/image_skeleton" />

    <View
        android:id="@+id/like_skeleton"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray300"
        app:layout_constraintStart_toEndOf="@+id/comment_skeleton"
        app:layout_constraintTop_toBottomOf="@+id/image_skeleton" />

</androidx.constraintlayout.widget.ConstraintLayout>
