<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white300"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/base_horizontal_margin"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/mypage_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_setting" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white300"
                android:paddingHorizontal="@dimen/base_horizontal_margin"
                android:paddingBottom="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mypage_profile_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nickname_tv"
                    style="@style/header"
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/mypage_profile_iv"
                    app:layout_constraintStart_toStartOf="@id/mypage_profile_iv"
                    app:layout_constraintTop_toBottomOf="@id/mypage_profile_iv" />

                <TextView
                    android:id="@+id/gender_birth_tv"
                    style="@style/subtext_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray200"
                    app:layout_constraintEnd_toEndOf="@id/nickname_tv"
                    app:layout_constraintStart_toStartOf="@id/nickname_tv"
                    app:layout_constraintTop_toBottomOf="@id/nickname_tv" />

                <TextView
                    android:id="@+id/recent_exercise_counts_tv"
                    style="@style/header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toStartOf="@id/current_year_exercise_days_ll"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gender_birth_tv" />

                <TextView
                    android:id="@+id/recent_exercise_counts_title_tv"
                    style="@style/subtext_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/recent_exercise_counts"
                    android:textColor="@color/gray200"
                    app:layout_constraintEnd_toEndOf="@id/recent_exercise_counts_tv"
                    app:layout_constraintStart_toStartOf="@id/recent_exercise_counts_tv"
                    app:layout_constraintTop_toBottomOf="@id/recent_exercise_counts_tv" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/current_year_exercise_days_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/recent_exercise_counts_tv"
                    app:layout_constraintEnd_toStartOf="@id/score_tv"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/recent_exercise_counts_tv"
                    app:layout_constraintTop_toTopOf="@id/recent_exercise_counts_tv">

                    <TextView
                        android:id="@+id/current_year_exercise_days_tv"
                        style="@style/header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/current_year_exercise_days_max_tv"/>

                    <TextView
                        android:id="@+id/current_year_exercise_days_max_tv"
                        style="@style/subtext_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/max_days"
                        android:textColor="@color/gray200"
                        android:layout_marginBottom="3dp"
                        app:layout_constraintStart_toEndOf="@id/current_year_exercise_days_tv"
                        app:layout_constraintBottom_toBottomOf="@id/current_year_exercise_days_tv"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    style="@style/subtext_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/current_year_exercise_days"
                    android:textColor="@color/gray200"
                    app:layout_constraintEnd_toEndOf="@id/current_year_exercise_days_ll"
                    app:layout_constraintStart_toStartOf="@id/current_year_exercise_days_ll"
                    app:layout_constraintTop_toBottomOf="@id/current_year_exercise_days_ll" />

                <TextView
                    android:id="@+id/score_tv"
                    style="@style/header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/recent_exercise_counts_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/current_year_exercise_days_ll"
                    app:layout_constraintTop_toTopOf="@id/recent_exercise_counts_tv" />

                <TextView
                    style="@style/subtext_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/exercise_score"
                    android:textColor="@color/gray200"
                    app:layout_constraintEnd_toEndOf="@id/score_tv"
                    app:layout_constraintStart_toStartOf="@id/score_tv"
                    app:layout_constraintTop_toBottomOf="@id/score_tv" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="26dp"
                    android:paddingTop="12dp"
                    android:paddingHorizontal="12dp"
                    android:clipToPadding="false"
                    android:background="@drawable/bg_solid_corner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recent_exercise_counts_title_tv" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp">
                        <TextView
                            android:id="@+id/introduction_tv"
                            style="@style/content_regular"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="start"
                            android:text="@string/empty_introduction" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white300"
                android:paddingHorizontal="@dimen/base_horizontal_margin"
                android:paddingBottom="4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/preferred_exercise_tv"
                    style="@style/content_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/preferred_exercise"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/preferred_exercise_tv" />

                <TextView
                    style="@style/content_bold"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_empty_preferred_exercise"
                    android:gravity="center"
                    android:text="@string/empty_preferred_exercise"
                    android:textColor="@color/gray200"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/preferred_exercise_tv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/calendar_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/base_horizontal_margin"
                android:layout_marginTop="5dp"
                android:paddingBottom="24dp"
                android:background="@color/white300">

                <ImageView
                    android:id="@+id/prev_month_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_calendar_back"
                    app:layout_constraintBottom_toBottomOf="@id/date_tv"
                    app:layout_constraintEnd_toStartOf="@id/date_tv"
                    app:layout_constraintTop_toTopOf="@id/date_tv"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/date_tv"
                    style="@style/content_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/next_month_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_calendar_next"
                    app:layout_constraintBottom_toBottomOf="@id/date_tv"
                    app:layout_constraintStart_toEndOf="@id/date_tv"
                    app:layout_constraintTop_toTopOf="@id/date_tv"
                    app:tint="@color/black" />

                <include
                    android:id="@+id/calendar_day_header"
                    layout="@layout/calendar_day_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/date_tv" />

                <com.kizitonwose.calendar.view.CalendarView
                    android:id="@+id/exercise_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/exercise_calendar_height"
                    app:cv_dayViewResource="@layout/calendar_day_layout"
                    app:cv_orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/calendar_day_header" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>